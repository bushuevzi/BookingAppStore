@{
    ViewBag.Title = "Home Page";
}



<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <th><p>Название книги</p></th>
            <th><p>Автор</p></th>
            <th><p>Цена</p></th>
            <th></th>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p>@Html.RouteLink("Купить", new { controller="Home", action="Buy", id=b.Id})</p></td>
            </tr>
        }
    </table>
</div>

@using (Html.BeginForm("GetForm", "Home", FormMethod.Post))
{
    @Html.DropDownList("author", ViewBag.Authors as SelectList)
    <input type="submit" value="Send"/>
}


@{ 
    string[] cities = new string[] { "London", "Paris", "Moscow" };
}

@{ 
    string[] countries = new string[] { "England", "France", "Russian" };
}

@using BookingAppStore.Helpers
@Html.CreateList(cities)
@Html.CreateList(countries)